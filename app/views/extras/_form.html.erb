<%= form_with model: @extra do |f| %>
    <%= f.label :name, "Extra Name" %><br>
    <%= f.text_field :name %><br>

    <%= f.label :charge, "Charge" %><br>
    <%= f.number_field :charge %><br>

    <%= f.label :event_id, "Event" %><br>
    <%= f.collection_select :event_id, @events, :id, :name %><br>

    <%= f.label :active, "Active" %><br>
    <%= f.check_box :active %><br>

    <%= f.submit "Save Extra" %>

<% end %>