<h1>Campers</h1>

<p style="color: green"><%= notice %></p>

<%= link_to "New Camper", new_camper_path %><br>

<table>
    <thead>
        <tr>
            <th>Camper Name</th>
            <th>City</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Reservations</th>
        </tr>
    </thead>
    <tbody>
        <% @campers.each do |camper| %>
            <tr>
                <td><%= link_to camper.last_name + ", " + camper.first_name, camper %></td>
                <td><%= camper.city %></td>
                <td><%= camper.phone %></td>
                <td><%= camper.email %></td>
                <td><% camper.active_reservations.each do |res| %>
                    <%= link_to res.lot.name + " ", res %>
                <% end %></td>
            </tr>
        <% end %>
    </tbody>
</table>



