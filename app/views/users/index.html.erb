<!-- app/views/users/index.html.erb -->
<h1>Users</h1>

<%= link_to 'New User', new_user_path %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%H:%M %d/%m/%Y") %></td>
                <td><%= user.updated_at.strftime("%H:%M %d/%m/%Y") %></td>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                <td><%= link_to 'Delete', account_url(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>