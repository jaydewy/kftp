<h1>Events Index</h1>
<p style="color: green"><%= notice %></p>
<p>Add instructions here pertaining to events</p>
<p><%= link_to "Create New Event", new_event_path %></p>
<table>
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Reservations</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |event| %>
            <tr>
                <td><%= link_to event.name, event %></td>
                <td><%= event.start_date %></td>
                <td><%= event.end_date %></td>
                <td><%=  %>Add res count here later</td>
                <td><%= link_to "Delete Event", event_path(event), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete this event?"
          } %></td>
            </tr>
        <% end %>
    </tbody>
</table>