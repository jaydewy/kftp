<h1>Invoices</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Time Sent</th>
            <th>Recipient</th>
        </tr>
    </thead>
    <tbody>
        <% @invoices.each do |inv| %>
            <tr>
                <td><%= inv.id %></td>
                <td><%= inv.created_at.strftime('%F %T') %></td>
                <td><%= inv.recipient %></td>
            </tr>
        <% end %>
    </tbody>
</table>