<%= form_with(model: fee) do |f| %>
  <% if fee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(fee.errors.count, "error") %> prohibited this fee from being saved:</h2>

      <ul>
        <% fee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Fee Name" %>
    <%= f.text_field :name %>

    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount %>

    <%= f.label :event_id, "Event" %>
    <%= f.collection_select :event_id, @events, :id, :name %>

    <%= f.label :site_type_id, "Site Type" %>
    <%= f.collection_select :site_type_id, @sitetypes, :id, :name %>

    <%= f.submit "Save Fee" %>
  </div>
<% end %>
