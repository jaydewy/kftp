    <%= f.text_field :name %><br>

    <%= f.label :length, "Length" %><br>
    <%= f.number_field :length %><br>

    <%= f.label :width, "Width" %><br>
    <%= f.number_field :width %><br>

    <%= f.label :special_condition, "Lot Notes" %><br>
    <%= f.text_field :special_condition %><br>

    <%= f.label :unavailable, "Lot Unavailable?" %><br>
    <%= f.check_box :unavailable %><br>

    <%= f.submit "Save Lot" %>

<% end %>