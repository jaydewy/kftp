<h1>Lot List</h1>

    <table>
        <th>
            <td>Lot Number</td>
            <td>Length</td>
            <td>Width</td>
            <td>Notes</td>
            <td>Type</td>
            <td>Price</td>
        </th>
        <% @lots.each do |lot| %>
            <tr>
                <td><%= link_to lot.name, lot %></td>
                <td><%= lot.length %></td>
                <td><%= lot.width %></td>
                <td><%= lot.special_condition %></td>
                <td><%= lot.site_type.name %></td>
                <td><%= lot.rate.name %></td>
            </tr>
        <% end %>
    </table>

