<h1>Lot List</h1>

<h2><%= @active_event.name %></h2>

<p style="color: green"><%= notice %></p>
<% # %>

<%= link_to "Create New Lot", new_lot_path %><br>

    <table>
        <thead>
            <tr>
                <th>Lot Number</th>
                <th>Width</th>
                <th>Length</th>
                <th>Type</th>
                <th>Fee for Active Event</th>
                <th>Notes</th>
            </tr>    
        </thead>
        <tbody>
            <% @lots.each do |lot| %>
                <tr>
                    <td><%= link_to lot.name, edit_lot_path(lot) %></td>
                    <td><%= lot.width %>'</td>
                    <td><%= lot.length %>'</td>
                    <td><%= lot.site_type.name %></td>
                    <td><%= number_to_currency(lot.active_fee.amount) %></td>
                    <td><%= lot.special_condition %></td>
                </tr>
            <% end %>    
        </tbody>
    </table>

